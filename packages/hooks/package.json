{
    "name": "@thesage/hooks",
    "version": "0.1.2",
    "publishConfig": {
        "access": "public"
    },
    "description": "Utility hooks for Sage Design Engine",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "tsup src/index.ts --format cjs,esm --dts",
        "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
        "lint": "eslint src/"
    },
    "peerDependencies": {
        "react": ">=18"
    },
    "devDependencies": {
        "@thesage/config": "workspace:*",
        "@types/node": "^25.0.9",
        "@types/react": "^19",
        "tsup": "^8.0.0",
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "usehooks-ts": "^3.1.1"
    }
}