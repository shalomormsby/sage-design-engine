{
  "name": "@thesage/mcp",
  "version": "0.8.2",
  "description": "Model Context Protocol server for Sage Design Engine - discover and integrate components with AI assistants",
  "author": "Shalom Ormsby",
  "repository": {
    "type": "git",
    "url": "https://github.com/shalomormsby/ecosystem.git",
    "directory": "packages/mcp"
  },
  "homepage": "https://thesage.dev/#mcp-server",
  "bugs": "https://github.com/shalomormsby/ecosystem/issues",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "sds-mcp": "dist/index.js"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsup src/index.ts src/registry.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts src/registry.ts --format esm,cjs --dts --watch",
    "lint": "eslint src/",
    "start": "node dist/index.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "design-system",
    "sage",
    "ai",
    "claude"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./registry": {
      "types": "./dist/registry.d.ts",
      "import": "./dist/registry.mjs",
      "require": "./dist/registry.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ]
}