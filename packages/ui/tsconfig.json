{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "paths": {
            "@thesage/tokens": [
                "../tokens/src/index.ts"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/test/**",
        "src/**/*.test.ts",
        "src/**/*.test.tsx"
    ]
}
