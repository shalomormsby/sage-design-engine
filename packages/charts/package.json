{
    "name": "@thesage/charts",
    "version": "0.2.0",
    "publishConfig": {
        "access": "public"
    },
    "description": "Chart components for Sage Design Engine",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "tsup src/index.ts --format cjs,esm --dts",
        "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
        "lint": "eslint src/"
    },
    "peerDependencies": {
        "react": ">=18",
        "recharts": "^2.12.0"
    },
    "devDependencies": {
        "@thesage/config": "workspace:*",
        "@types/react": "^19",
        "tsup": "^8.0.0",
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "clsx": "^2.1.1",
        "tailwind-merge": "^3.4.0"
    }
}