{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Sage Design Engine Component Registry",
  "description": "Schema for the SDE component registry. Third parties can use this schema to create compatible registries or validate component data.",
  "type": "object",
  "required": ["version", "package", "components"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Semantic version of the component library"
    },
    "package": {
      "type": "string",
      "description": "npm package name"
    },
    "totalComponents": {
      "type": "integer",
      "description": "Total number of components in the registry"
    },
    "themes": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Available theme names"
    },
    "categories": {
      "type": "array",
      "items": { "type": "string" },
      "description": "All component category names"
    },
    "components": {
      "type": "array",
      "items": { "$ref": "#/$defs/component" },
      "description": "Array of component definitions"
    }
  },
  "$defs": {
    "component": {
      "type": "object",
      "required": ["name", "category", "description"],
      "properties": {
        "name": {
          "type": "string",
          "description": "PascalCase component name"
        },
        "category": {
          "type": "string",
          "enum": [
            "actions",
            "forms",
            "navigation",
            "overlays",
            "feedback",
            "data-display",
            "layout",
            "backgrounds",
            "cursor",
            "motion",
            "blocks"
          ],
          "description": "Functional category the component belongs to"
        },
        "description": {
          "type": "string",
          "description": "Human-readable description of the component"
        },
        "keywords": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Search keywords for discoverability"
        },
        "useCases": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Common use cases for this component"
        },
        "dependencies": {
          "type": "array",
          "items": { "type": "string" },
          "description": "npm packages required by this component"
        },
        "radixPrimitive": {
          "type": "string",
          "description": "Underlying Radix UI primitive, if any"
        },
        "props": {
          "type": "array",
          "items": { "$ref": "#/$defs/prop" },
          "description": "Component props"
        },
        "subComponents": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Named sub-components (e.g., DialogTrigger, DialogContent)"
        },
        "examples": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Usage examples as code strings"
        }
      }
    },
    "prop": {
      "type": "object",
      "required": ["name", "type"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Prop name"
        },
        "type": {
          "type": "string",
          "description": "TypeScript type of the prop"
        },
        "required": {
          "type": "boolean",
          "description": "Whether the prop is required"
        },
        "default": {
          "type": "string",
          "description": "Default value as a string"
        },
        "description": {
          "type": "string",
          "description": "Human-readable description"
        },
        "options": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Valid values for enum-like props"
        }
      }
    }
  }
}
